<layout>
    <type>ui_window</type>

    <constraints>
        <x>
            <anchor>centered</anchor>
            <offset>-250</offset>
        </x>
        <y>
            <anchor>centered</anchor>
            <offset>-250</offset>
        </y>
        <width>500</width>
        <height>500</height>
    </constraints>

    <corner_sprites>
        <up_right>res/textures/corner_up_right.png</up_right>
        <up_left>res/textures/corner_up_left.png</up_left>
        <down_right>res/textures/corner_down_right.png</down_right>
        <down_left>res/textures/corner_down_left.png</down_left>
    </corner_sprites>

    <edge_sprites>
        <right>res/textures/edge_right.png</right>
        <down>res/textures/edge_down.png</down>
        <left>res/textures/edge_left.png</left>
        <up>res/textures/edge_up.png</up>
    </edge_sprites>
            
    <subelements>
        <ui_radio_button>
            <layout_filepath>res/layouts/radiotest.xml</layout_filepath>
            <use_parent_coordinates>yes</use_parent_coordinates>
        </ui_radio_button>
    </subelements>

</layout>